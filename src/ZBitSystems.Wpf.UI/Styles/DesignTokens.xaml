<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Design Tokens for Z-bit Systems Applications -->

    <!-- =================================================================
         WPF TYPE COMPATIBILITY GUIDE

         Double (system:Double):  FontSize, Width/Height on elements, Opacity
         Thickness:               Margin, Padding, BorderThickness
         GridLength:              ColumnDefinition.Width, RowDefinition.Height
         CornerRadius:            Border.CornerRadius

         NOTE: WPF does NOT auto-convert between these types at runtime.
         Using a Double resource for a Thickness property (e.g. Spacing.Large
         as Margin) will compile but throw XamlParseException at runtime.
         ================================================================= -->

    <!-- Spacing Scale (8px grid) - Type: Double -->
    <!-- Use for: FontSize overrides, element Width/Height, calc reference -->
    <system:Double x:Key="Spacing.XSmall">4</system:Double>
    <system:Double x:Key="Spacing.Small">8</system:Double>
    <system:Double x:Key="Spacing.Medium">16</system:Double>
    <system:Double x:Key="Spacing.Large">24</system:Double>
    <system:Double x:Key="Spacing.XLarge">32</system:Double>
    <system:Double x:Key="Spacing.XXLarge">48</system:Double>

    <!-- Uniform Thickness Scale - Type: Thickness -->
    <!-- Use for: Margin, Padding where all sides are equal -->
    <Thickness x:Key="Thickness.XSmall">4</Thickness>
    <Thickness x:Key="Thickness.Small">8</Thickness>
    <Thickness x:Key="Thickness.Medium">16</Thickness>
    <Thickness x:Key="Thickness.Large">24</Thickness>
    <Thickness x:Key="Thickness.XLarge">32</Thickness>

    <!-- Grid Gutter Widths - Type: GridLength -->
    <!-- Use for: ColumnDefinition.Width, RowDefinition.Height spacer columns/rows -->
    <GridLength x:Key="Gutter.Small">8</GridLength>
    <GridLength x:Key="Gutter.Medium">16</GridLength>
    <GridLength x:Key="Gutter.Large">24</GridLength>

    <!-- Standard Margins - Type: Thickness -->
    <Thickness x:Key="Margin.Card">10,5</Thickness>
    <Thickness x:Key="Margin.Control">0,0,16,0</Thickness>
    <Thickness x:Key="Margin.Button">8,4</Thickness>
    <Thickness x:Key="Margin.Section">0,0,0,16</Thickness>

    <!-- Standard Padding - Type: Thickness -->
    <Thickness x:Key="Padding.Card">16</Thickness>
    <Thickness x:Key="Padding.Control">8,4</Thickness>
    <Thickness x:Key="Padding.Button">16,8</Thickness>
    
    <!-- Corner Radius -->
    <CornerRadius x:Key="CornerRadius.Small">4</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Medium">8</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Large">12</CornerRadius>
    
    <!-- Typography Scale -->
    <system:Double x:Key="FontSize.Caption">12</system:Double>
    <system:Double x:Key="FontSize.Body">14</system:Double>
    <system:Double x:Key="FontSize.BodyLarge">16</system:Double>
    <system:Double x:Key="FontSize.Subtitle">20</system:Double>
    <system:Double x:Key="FontSize.Title">24</system:Double>
    <system:Double x:Key="FontSize.Headline">32</system:Double>
    <system:Double x:Key="FontSize.Display">36</system:Double>
    
    <!-- Legacy Semantic Colors (kept for backwards compatibility) -->
    <!-- Note: Use SemanticSuccessBrush, SemanticWarningBrush, etc. from ThemeSemanticColors.xaml for new implementations -->
    <!-- These provide automatic theme switching between light and dark modes -->
    <SolidColorBrush x:Key="Brush.Success" Color="#107C10"/>
    <SolidColorBrush x:Key="Brush.Warning" Color="#FF8C00"/>
    <SolidColorBrush x:Key="Brush.Error" Color="#D13438"/>
    <SolidColorBrush x:Key="Brush.Info" Color="#0078D4"/>
    
    <!-- Theme-aware semantic colors are now defined in ThemeSemanticColors.xaml -->
    <!-- Use {DynamicResource SemanticSuccessBrush} etc. for automatic theme support -->
    
    <!-- Activity Colors -->
    <SolidColorBrush x:Key="Brush.Activity.Tx" Color="#DC143C"/>
    <SolidColorBrush x:Key="Brush.Activity.Rx" Color="#32CD32"/>
    <SolidColorBrush x:Key="Brush.Activity.Inactive" Color="#808080"/>
    
    <!-- Control Sizing -->
    <system:Double x:Key="Control.Height.Small">28</system:Double>
    <system:Double x:Key="Control.Height.Medium">32</system:Double>
    <system:Double x:Key="Control.Height.Large">40</system:Double>
    
    <system:Double x:Key="Control.Width.Small">120</system:Double>
    <system:Double x:Key="Control.Width.Medium">200</system:Double>
    <system:Double x:Key="Control.Width.Large">280</system:Double>

</ResourceDictionary>