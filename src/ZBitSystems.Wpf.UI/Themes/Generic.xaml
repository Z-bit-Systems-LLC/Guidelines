<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                    xmlns:controls="clr-namespace:ZBitSystems.Wpf.UI.Controls">

    <Style TargetType="{x:Type controls:LicenseExpander}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:LicenseExpander}">
                    <ui:CardExpander>
                        <ui:CardExpander.Header>
                            <ui:TextBlock VerticalAlignment="Center"
                                          Text="{TemplateBinding Header}"
                                          TextWrapping="Wrap" />
                        </ui:CardExpander.Header>
                        <ui:CardExpander.Content>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                          MaxHeight="{TemplateBinding MaxContentHeight}">
                                <ui:TextBlock Text="{TemplateBinding LicenseText}"
                                              FontFamily="Courier New" />
                            </ScrollViewer>
                        </ui:CardExpander.Content>
                    </ui:CardExpander>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
